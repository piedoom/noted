<p id="notice"><%= notice %></p>

<h1>Listing Messages</h1>

<table>
  <thead>
    <tr>
      <th>Body</th>
      <th>User</th>
      <th>Conversation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.body %></td>
        <td><%= message.user_id %></td>
        <td><%= message.group_id %></td>
        <td><%= link_to 'Show', [@group, message] %></td>
        <td><%= link_to 'Edit', edit_group_message_path(@group, message) %></td>
        <td><%= link_to 'Destroy', [@group, message], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Message', new_group_message_path(@group) %>
